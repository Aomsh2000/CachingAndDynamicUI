@model List<Caching_DynamicUI.Models.ToDo>

@{
    ViewData["Title"] = "Memory Todos";
    var source = ViewBag.Source as string;
}

<h2>Todos List</h2>
<p><strong>Source:</strong> @source</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
                <tr>
                    <td>@todo.Id</td>
                    <td>@todo.Title</td>
                    <td>@(todo.Completed ? "✅" : "❌")</td>
                </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary mt-3" asp-controller="ToDo" asp-action="Index">⬅ Back</a>
